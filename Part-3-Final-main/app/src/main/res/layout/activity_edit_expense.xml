<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E2D6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Expense"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2C6453"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update or Delete Your Expense\nDetails and Keep Your Budget Accurate"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="#2C6453" />

        <Spinner
            android:id="@+id/editCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Expense Description"
            android:layout_marginTop="16dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/editAmount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Amount"
            android:layout_marginTop="12dp"
            android:inputType="numberDecimal"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/editDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="DD/MM/YYYY"
            android:layout_marginTop="12dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/editReceipt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Upload New Receipt"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnUploadEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_marginTop="6dp"
            android:backgroundTint="#2C6453"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnSaveExpense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2C6453"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnDeleteExpense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2C6453"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
