<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6DDC4">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Selected Date Range Text -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Category Totals"
                android:textColor="#2F7264"
                android:textSize="14pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSelectedDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No range selected"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Pick Date Range Button -->
            <Button
                android:id="@+id/btnPickDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Date Range"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2F7264"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Totals RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategoryTotals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:textColor="#000000"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>